<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
    x:Class="Capibara.Views.SignInPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.iOS>0, 20, 0, 30</OnPlatform.iOS>
            <OnPlatform.Android>0, 0, 0, 30</OnPlatform.Android>
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        Padding="20, 0, 20, 0">
        <Label
            HorizontalOptions="FillAndExpand"
            Text="Capibara"
            FontSize="70"
            HorizontalTextAlignment="Center"
            Margin="0, 20, 0, 60"
            FontAttributes="Bold"
            />
        <Entry
            HorizontalOptions="FillAndExpand"
            Placeholder="メールアドレス"
            HeightRequest="40"
            Text="{Binding Email.Value, Mode=TwoWay}"
            Margin="0, 0, 0, 20"
            />
        <Entry
            HorizontalOptions="FillAndExpand"
            Placeholder="パスワード"
            HeightRequest="40"
            IsPassword="true"
            Text="{Binding Password.Value, Mode=TwoWay}"
            />
        <Label
            Margin="0, 30, 0, 0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Text="{Binding Error.Value, Mode=TwoWay}"
            FontAttributes="Bold"
            TextColor="Red"
            />
        <Button
            HorizontalOptions="FillAndExpand"
            HeightRequest="50"
            FontSize="20"
            Text="ログイン"
            TextColor="White"
            BackgroundColor="#58CE91"
            BorderRadius="25"
            Command="{Binding SignInCommand}"
            Margin="0, 0, 0, 20"
            />
        <Button
            HorizontalOptions="FillAndExpand"
            HeightRequest="50"
            FontSize="20"
            Text="アカウントを作成する"
            TextColor="#58CE91"
            BorderColor="#58CE91"
            BorderWidth="2"
            BorderRadius="25"
            BackgroundColor="White"
            Command="{Binding SignUpCommand}"
            Margin="0, 0, 0, 50"
            />
    </StackLayout>
</ContentPage>
