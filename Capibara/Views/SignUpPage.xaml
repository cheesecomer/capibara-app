<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" 
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
    prism:ViewModelLocator.AutowireViewModel="True" 
    x:Class="Capibara.Views.SignUpPage"
    BackgroundColor="#2f8e5b">
    <Grid Padding="20, 0, 20, 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Converter={StaticResource topMargin}}" />
            <RowDefinition Height="*" />
            <RowDefinition Height="{Binding Converter={StaticResource bottomMargin}}" />
        </Grid.RowDefinitions>
        <Image 
            Grid.RowSpan="3"
            Margin="-20, 0, -20, -30"
            Source="bg_launch"
            Aspect="Fill" />
        <StackLayout
            Grid.Row="1"
            Spacing="0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Image
                Source="logo"
                Margin="-20, 20, -20, 0"
                />
            <Label
                Margin="0, 50, 0, 30"
                TextColor="#eee"
                Text="ニックネームを登録して&#xD;&#xA;アプリを始めよう！"
                HorizontalTextAlignment="Center"
                />
            <Entry
                HorizontalOptions="FillAndExpand"
                Placeholder="ニックネーム"
                Text="{Binding Nickname.Value, Mode=TwoWay}"
                HeightRequest="40"
                />
            <Label
                Margin="0, 30, 0, 0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Text="{Binding Error.Value, Mode=TwoWay}"
                FontAttributes="Bold"
                TextColor="Red"
                />
            <Button
                HorizontalOptions="FillAndExpand"
                Text="登録！"
                TextColor="{StaticResource PrimaryColor}"
                BorderColor="{StaticResource PrimaryColor}"
                BackgroundColor="White"
                Command="{Binding SignUpCommand}"
                Margin="0, 0, 0, 20"
                />
            <Button
                HorizontalOptions="FillAndExpand"
                Text="SNSアカウントでログイン！"
                TextColor="{StaticResource PrimaryColor}"
                BorderColor="{StaticResource PrimaryColor}"
                BackgroundColor="White"
                Command="{Binding SignUpWithSnsCommand}"
                Margin="0, 0, 0, 20"
                />
            <Button
                HorizontalOptions="FillAndExpand"
                FontSize="Small"
                Text="既にアカウントのある方"
                TextColor="White"
                BorderColor="Transparent"
                BackgroundColor="Transparent"
                Command="{Binding SignInCommand}"
                Margin="0, 0, 0, 0"
                />
        </StackLayout>
    </Grid>
</ContentPage>
